package src.agnes.ejb;

public class AddBean {

	private int i, j, k;

	// Constructors.
	public AddBean() {
		i = 0;
		j = 0;
		k = 0;
	}
	
	// Business logic.
	public void add() {
		k = i + j;
	}
	
	// Accessors, use as needed.
	public int getI() {
		return i;
	}

	public void setI(int i) {
		this.i = i;
	}

	public int getJ() {
		return j;
	}

	public void setJ(int j) {
		this.j = j;
	}

	public int getK() {
		return k;
	}

	public void setK(int k) {
		this.k = k;
	}
	
	
}
