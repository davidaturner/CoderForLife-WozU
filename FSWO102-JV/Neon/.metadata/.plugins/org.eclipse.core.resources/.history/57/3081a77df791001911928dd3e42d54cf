package src.agnes.ejb;

public class AddBean {

	private int i, j, result;

	// Constructors.
	public AddBean() {
		this(0, 0);
	}	
	public AddBean(int firstNumber, int secondNumber) {
		add(firstNumber, secondNumber);
	}
	
	// Business logic.
	public void add() {
		result = i + j;
	}
	public int add(int firstNumber, int secondNumber) {
		this.i = firstNumber;
		this.j = secondNumber;
		result = i + j;
		return result;
	}
	
	// Accessors, use as needed.
	public int getI() {
		return i;
	}

	public void setI(int i) {
		this.i = i;
	}

	public int getJ() {
		return j;
	}

	public void setJ(int j) {
		this.j = j;
	}

	public int getResult() {
		return result;
	}
	/*
	public void setResult(int result) {
		this.result = result;
	}
	*/
	
}
